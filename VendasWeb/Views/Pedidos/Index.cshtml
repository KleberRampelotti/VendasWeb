@model IEnumerable<VendasWeb.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Cadastro de Pedidos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Pedido")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Nome)
        </th>
        <th>
            @Html.DisplayName("Valor Total")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id }) |               
                @Html.ActionLink("Itens do Pedido", "../PedidoProdutos/Index", new { id = item.Id })
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Incluir", "Create") |
    @Html.ActionLink("Voltar", "../Home/IndexMenu")
</div>