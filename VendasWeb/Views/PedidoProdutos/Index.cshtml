@model IEnumerable<VendasWeb.PedidoProduto>

@{
    ViewBag.Title = "Index";
}

<h2>Cadastro de Itens do Pedido</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Item")
        </th>
        <th>
            @Html.DisplayName("Pedido")
        </th>
        <th>
            @Html.DisplayName("Produto")
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Produto.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PedidoID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ProdutoID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Produto.Nome)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Valor)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantidade)
    </td>    
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Detalhar", "Details", new { id = item.Id }) |
        @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
    </td>
</tr>
}
</table>

<p>
    @Html.ActionLink("Incluir", "Create") |
    @Html.ActionLink("Voltar", "../Pedidos/Index")
</p>
